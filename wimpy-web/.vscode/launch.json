    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile WASM",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/build.ps1",
            "cwd": "${workspaceFolder}../",
            "args": []
        },
        {
            "name": "NPX Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "args": ["serve", "${workspaceFolder}/html"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Compile WAM Assets (Web)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "${workspaceFolder}../../wam/wam-cli/bin/Debug/net10.0/wam-cli.dll",
                "build-manifest",
                "-i",
                "assets",
                "-o",
                "wimpy-web/html/assets",
                "-n",
                "test-namespace",
                "-m",
                "wam.json"
            ],
            "cwd": "${workspaceFolder}../../",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
