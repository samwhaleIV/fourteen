{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (MSVC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\..\\target\\debug\\wimpy-native.exe",
            "cwd": "${workspaceFolder}\\..\\target\\debug\\",
            "preLaunchTask": "cargo build",
            "stopAtEntry": false,
            "environment": [
                {
                    "name": "RUST_LOG",
                    "value": "wimpy_engine,wimpy_native=TRACE"
                }
            ]
        },
        {
            "name": "Debug (LLDB)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "run",
                    "--bin=wimpy-native",
                    "--package=wimpy-native"
                ]
            },
            "args": [],
            "env": {
                "RUST_LOG": "wimpy_engine,wimpy_native=TRACE"
            }
        },
        {
            "name": "Compile WAM Assets (Native)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "${workspaceFolder}../../wam/wam-cli/bin/Debug/net10.0/wam-cli.dll",
                "build-manifest",
                "-i",
                "assets",
                "-o",
                "assets/debug-output",
                "-n",
                "test-namespace",
                "-m",
                "wam.json"
            ],
            "cwd": "${workspaceFolder}../../",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
